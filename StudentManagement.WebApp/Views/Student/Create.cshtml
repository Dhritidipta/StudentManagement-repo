@model StudentManagement.WebApp.Models.StudentCreate
@{
    ViewBag.Title = "Create Student Page";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div id="back-btn">
    <a asp-controller="Home" asp-action="Index" role="button" class="btn btn-outline-primary">&lt;&lt; Back to home</a>
</div>
<div class="m-auto" id="wrap-form">
    <form asp-action="Create" method="post" role="form" class="labels-bold">
        @*  <div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="row mb-3">
            <label asp-for="FirstName" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>
        <div class="row mb-3">
            <label asp-for="LastName" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>

        <div class="row mb-3">
            <label asp-for="Gender" class="col-md-2 control-label required"></label>

            <div class="btn-group col-md-5 radio-toggle" role="group" aria-label="Basic radio toggle button group">
                <input asp-for="Gender" value="Male" type="radio" class="btn-check" id="btnradio1" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="btnradio1">Male</label>

                <input asp-for="Gender" value="Female" type="radio" class="btn-check" id="btnradio2" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio2">Female</label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Fees" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <input asp-for="Fees" class="form-control" />
            </div>
            <span asp-validation-for="Fees" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Age" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <input asp-for="Age" class="form-control" />
            </div>
            <span asp-validation-for="Age" class="text-danger"></span>

        </div>
        <div class="row mb-3">
            <label asp-for="CourseId" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <select id="coursesDropDown" asp-for="CourseId" class="form-control">
                    <option value="">--Select Course--</option>
                </select>
            </div>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="SectionId" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <select id="sectionsDropDown" asp-for="SectionId" class="form-control">
                    <option value="">--Select Section--</option>

                </select>
            </div>
            <span asp-validation-for="SectionId" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="DateOfAdmission" class="col-md-2 control-label required"></label>
            <div class="col-md-5">
                <input asp-for="DateOfAdmission" class="form-control" />
            </div>
            <span asp-validation-for="DateOfAdmission" class="text-danger"></span>
        </div>

        <div class="row mb-3 mt-3" id="btn-wrap">
            <div id="cancel-btn" class="col-md-2">
                <a asp-action="Index" asp-controller="Home" role="button" class="btn btn-outline-primary">Cancel</a>
            </div>
            <div id="add-btn" class="col-md-5">
                <input type="submit" class="btn btn-outline-primary" value="Add" />
            </div>
        </div>
    </form>
</div>

<script>
    var token = '@ViewBag.token';
    var courseValue = -1;
    var sectionValue = -1;
</script>
<script src="~/js/site.js" asp-append-version="true"></script>
