@model IEnumerable<StudentManagement.WebApp.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div id="add-btn">
        <a asp-controller="Student" asp-action="Create" role="button" class="btn btn-outline-primary">Add Student</a>
    </div>
    
    @if (Model != null)
    {
    <table class="table table-striped table-responsive-md">
        <thead>
            <tr>
                <th scope="col">#id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Section</th>
                <th scope="col">Gender</th>
                <th scope="col">Course Name</th>
                <th scope="col">Date of Admission</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var student in Model)
                {
                    <tr>
                        <th scope="row">@student.Id</th>
                        <td><a asp-action="Details" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-link btn-sm">@student.Name</a></td>
                        <td>@student.Section</td>
                        <td>@student.Gender</td>
                        <td>@student.Course</td>
                        <td>@student.DateOfAdmission.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-success btn-sm text-white mr-3">Edit</a>
                            <a asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id" asp- class="btn btn-danger btn-sm text-white" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
    }

    else
    {
        <h2>No records found.</h2>
    }
</div>